{
  "name": "cushon/health-bundle",
  "description": "A Symfony bundle for microservice health checks",
  "license": "MIT",
  "type": "symfony-bundle",
  "authors": [
    {
      "name": "Barney Hanlon",
      "homepage": "https://cushon.co.uk",
      "role": "Software Engineering Manager"
    },
    {
      "name": "Rob Pavier",
      "homepage": "https://cushon.co.uk",
      "role": "Software Engineering Manager"
    },
    {
      "name": "Lucy Ferrabee",
      "homepage": "https://cushon.co.uk",
      "role": "Software Engineer"
    },
    {
      "name": "Paul Mcewan",
      "homepage": "https://cushon.co.uk",
      "role": "Software Engineer"
    }
  ],
  "require": {
    "php": "^8.1",
    "ergebnis/json-printer": "^3.2",
    "psr/container": "^1.1",
    "psr/log": "^3.0",
    "symfony/config": "6.0.*",
    "symfony/dependency-injection": "6.0.*",
    "symfony/framework-bundle": "^6.0",
    "symfony/messenger": "^6.0",
    "symfony/yaml": "^6.0",
    "thecodingmachine/safe": "^2.1"
  },
  "require-dev": {
    "ext-pcov": "*",
    "behat/behat": "^3.6",
    "brianium/paratest": "^6.4",
    "dvdoug/behat-code-coverage": "^5.2",
    "ergebnis/composer-normalize": "^2.25",
    "friends-of-behat/symfony-extension": "^2.3",
    "infection/infection": "dev-master",
    "jangregor/phpstan-prophecy": "^1.0",
    "php-ds/php-ds": "^1.4",
    "phpmd/phpmd": "^2.12",
    "phpmetrics/phpmetrics": "^2.8",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.6",
    "phpunit/php-code-coverage": "^9.2",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/dotenv": "^6.0",
    "symfony/flex": "^2.0",
    "symfony/phpunit-bridge": "^6.0",
    "symfony/runtime": "^6.0",
    "vimeo/psalm": "^4.22"
  },
  "suggest": {
    "ext-ds": "PHP data structures for handling Sets. See https://www.php.net/manual/en/book.ds.php",
    "ext-zend-opcache": "Zend Op Cache to improve performance"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cushon\\HealthBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": "app/src",
      "Tests\\Utils\\": "tests/utils/src",
      "Tests\\Behat\\": "tests/behat/src",
      "Tests\\Unit\\": "tests/unit/src"
    }
  },
  "archive": {
    "exclude": [
      "*",
      "!src",
      "!README.md"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "ergebnis/composer-normalize": true,
      "infection/extension-installer": true,
      "phpstan/extension-installer": true,
      "symfony/flex": true,
      "symfony/runtime": true
    },
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    },
    "config-dir": "app/config",
    "public-dir": "app/public",
    "src-dir": "app/src",
    "symfony": {
      "allow-contrib": true,
      "require": "6.0.*"
    },
    "var-dir": "build/var"
  },
  "scripts": {
    "post-update-cmd": [
      "@composer normalize",
      "@test"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "behat": "vendor/bin/behat --format progress --format pretty",
    "behat:console": "@behat --suite=console",
    "behat:messagebus": "@behat --suite=messagebus",
    "console": "app/bin/console",
    "fix": [
      "@phpcbf",
      "@psalm:fix",
      "@composer normalize"
    ],
    "health": "@composer console cushon:health",
    "infection": "php -d pcov.enabled=1 vendor/bin/infection --show-mutations --threads=8",
    "metrics": [
      "@phpunit:all",
      "@phpmetrics"
    ],
    "phpcbf": "vendor/bin/phpcbf",
    "phpcs": "vendor/bin/phpcs",
    "phpmd": "vendor/bin/phpmd ./src text ./phpmd.xml.dist",
    "phpmetrics": "php -d 'error_reporting=E_ALL ^ E_DEPRECATED' vendor/bin/phpmetrics --config=.phpmetrics.json",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon.dist",
    "phpunit": [
      "@phpunit:all",
      "@infection"
    ],
    "phpunit:all": "vendor/bin/simple-phpunit --coverage-text --coverage-cobertura ${COVERAGE_DIR:-build/coverage}/cobertura.xml",
    "psalm": "vendor/bin/psalm",
    "psalm:fix": "vendor/bin/psalm --alter --issues=all --dry-run",
    "quality": [
      "@phpcs",
      "@phpmd",
      "@phpstan",
      "@psalm"
    ],
    "test": [
      "@phpunit",
      "@behat"
    ]
  }
}
